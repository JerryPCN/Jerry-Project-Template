@model Article
<mt-header class="my-header-danger" title="文章详情">
    <mt-button slot="left" icon="back" @@click="goBack()">返回</mt-button>
    <span slot="right">{{Location.City}}</span>
</mt-header>

<div class="my-title">
    <h2>{{Title}}</h2>
    <div class="my-time">{{getDate(UpdateTime)}}</div>
</div>

<div class="my-content" v-html="Content"></div>

@Html.Partial("_MyFooter")

@section js{
<script>
    function getVueOptions() {
        return helper.getVueModelOptions({
            data: @Html.Raw(SerializationHelper.ToJson(Model??new Article
             {
                 Title = "暂未添加",
                 Content = "暂未添加，请稍后查看"
             }))
        });
    }
</script>
}